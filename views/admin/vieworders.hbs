<div class="" style="margin:40px 40px 40px 40px; min-height: 600px;">
    							<div class="card flex-fill">
    								<div class="card-header">
    
    									<h5 class="card-title mb-0">ORDERS LIST</h5>
    								</div>
    								<table class="table table-hover my-0">
    									<thead>
    										<tr>
    											<th>Date</th>
                                                <th class="d-none d-xl-table-cell">Address</th>
    											<th class="d-none d-xl-table-cell">Mobile No</th>
												<th class="d-none d-xl-table-cell">Pincode</th>
												<th class="d-none d-xl-table-cell">Total Amount</th>
												<th class="d-none d-xl-table-cell">Payment Method</th>
												<th class="d-none d-xl-table-cell">Status</th>
    										</tr>
    									</thead>
    									<tbody>
											{{#each orders}}
    										<tr>
    											<td>{{this.date}}</td>
    											<td class="d-none d-xl-table-cell">{{this.deliverydetails.address}}</td>
												<td class="d-none d-xl-table-cell">{{this.deliverydetails.mobile}}</td>
												<td class="d-none d-xl-table-cell">{{this.deliverydetails.pincode}}</td>
												<td class="d-none d-xl-table-cell">{{this.totalamount}}</td>
												<td class="d-none d-xl-table-cell">{{this.paymentmethod}}</td>
												<td class="d-none d-xl-table-cell">{{this.status}}</td>
                                                <td style="width: 1rem;"><a href="/admin/vieworderproducts/{{this._id}}" class="btn btn-primary">View Products</a></td>
    										</tr>
											{{/each}}
    									</tbody>
    								</table>
    							</div>
    						</div>