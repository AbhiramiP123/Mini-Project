<div class="container ">
        <div class="row" style="margin-top: 6rem; margin-bottom:10rem;">
            <div class="col-md-6" style="margin-left: 18rem;">
                 <h2 class="text-center">Add product</h2>
                <form action="/admin/addproducts" method="post" enctype="multipart/form-data">
                  <label for="">Name</label>
                <input type="text" name="name" class="form-control" required>
                 {{!-- <label for="">category</label>
                <input type="text" name="category" class="form-control"> --}}
                <div class="mb-2 mt-2">
								<label class="form-label">Category</label>
								<select class="form-select mb-3" id="" name="category">
                <option selected> Open this select menu</option>
                  {{#each category}}
                 <option>{{this.name}}</option>
                  {{/each}}
                  </select>
										</div>
                 <label for="">price</label>
                <input type="number" name="price" class="form-control" required>
                <label for="">Description</label>
                <input type="text" name="description" class="form-control" required>
                <label for="">Expiry Date</label>
                <input type="date" name="expirydate" class="form-control">
                <label for="">Quantity</label>
                <input type="text" name="quantity" class="form-control">
                 <input type="text" name="star" value="4" class="form-control" hidden>
                <label for="">Image</label>
                <input type="file" name="image"class="form-control" required>
                <button type="submit" class="btn button mt-4">submit</button>
                </form>
            </div>
        </div>
    </div>