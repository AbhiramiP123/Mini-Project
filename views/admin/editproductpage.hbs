 <div class="container ">
        <div class="row" style="margin-top: 6rem; margin-bottom:10rem;">
            <div class="col-md-6" style="margin-left: 18rem;">
                 <h2 class="text-center">Edit product</h2>
                <form action="/admin/editproducts/{{product._id}}" method="post" enctype="multipart/form-data">
                  <label for="">Name</label>
                <input type="text" name="name" class="form-control" value="{{product.name}}">
                 <label for="">category</label>
                <input type="text" name="category" class="form-control" value="{{product.category}}">
                 <label for="">price</label>
                <input type="number" name="price" class="form-control" value="{{product.price}}">
                 <label for="">Description</label>
                <input type="text" name="description" class="form-control" value="{{product.description}}">
                 <label for="">Expiry Date</label> 
                <input type="date" name="expdate" class="form-control" value="{{product.expdate}}">
                <label for="">Quantity</label>
                <input type="text" name="quantity" class="form-control" value="{{product.quantity}}">
                <label for="">Total Number</label>
                <input type="number" name="totalnumber" class="form-control" value="{{product.totalnumber}}">
                <label for="">Image</label>
                 <img src="/product-images/{{product.imagename}}" alt="" style="width:100px; height:100px; margin:10px" id="viewimg">
                <input type="file" name="image" class="form-control" onchange="viewimage(event)">
                <button type="submit" class="btn button mt-4">submit</button>
                </form>
            </div>
        </div>
    </div>
    <script>
    function viewimage(event)
    {
        document.getElementById('viewimg').src=URL.createObjectURL(event.target.files[0])
    }
</script>